#include <stdio.h>

int main() {
    int n, i,codes[30], quantites[30],rupture = 0,index_max = 0, index_min = 0,stock_total = 0;
    float prix[30],valeur_totale = 0, valeur_produit,prix_max = 0, prix_min = 999999;
    printf("\n=============================================\n");
    printf("        BIENVENUE DANS LE GESTIONNAIRE       \n");
    printf("                  DE STOCK                   \n");
    printf("=============================================\n\n");

    do {
        printf("Combien de produits souhaitez-vous enregistrer (1 à 30) ? ");
        scanf("%d", &n);
        if(n < 1 || n > 30)
            printf("Veuillez entrer un nombre valide.\n");
    } while(n < 1 || n > 30);

    printf("\n--- SAISIE DES PRODUITS ---\n");

    for(i = 0; i < n; i++) {
        printf("\nProduit %d\n", i+1);

        printf("ode du produit : ");
        scanf("%d", &codes[i]);

        do {
            printf("uantité en stock : ");
            scanf("%d", &quantites[i]);
            if(quantites[i] < 0)
                printf("La quantité ne peut pas être négative.\n");
        } while(quantites[i] < 0);

        do {
            printf("Prix unitaire (DH) : ");
            scanf("%f", &prix[i]);
            if(prix[i] < 0)
                printf("Le prix ne peut pas être négatif.\n");
        } while(prix[i] < 0);

        valeur_produit = quantites[i] * prix[i];
        valeur_totale += valeur_produit;
        stock_total += quantites[i];

        if(quantites[i] < 5) rupture++;

        if(prix[i] > prix_max) { prix_max = prix[i]; index_max = i; }
        if(prix[i] < prix_min) { prix_min = prix[i]; index_min = i; }
    }

    printf("\n=============================================\n");
    printf("               RAPPORT DE STOCK              \n");
    printf("=============================================\n\n");

    printf("Code | Qté | Prix(DH) | Valeur   | Statut\n");
    printf("----------------------------------------------\n");

    for(i = 0; i < n; i++) {
        valeur_produit = quantites[i] * prix[i];
        printf("%4d | %3d | %8.2f | %8.2f | ", 
               codes[i], quantites[i], prix[i], valeur_produit);

        if(quantites[i] == 0)           printf("Rupture totale\n");
        else if(quantites[i] < 5)       printf("Alerte stock\n");
        else if(quantites[i] < 10)      printf("Stock faible\n");
        else                            printf("Stock suffisant\n");
    }

    printf("\n--- Statistiques globales ---\n");
    printf("Quantité totale en stock : %d unités\n", stock_total);
    printf("Valeur totale du stock : %.2f DH\n", valeur_totale);
    printf("Valeur moyenne par produit : %.2f DH\n", valeur_totale / n);

    printf("\nProduit le plus cher : Code %d (%.2f DH)\n",
           codes[index_max], prix_max);
    printf("Produit le moins cher : Code %d (%.2f DH)\n",
           codes[index_min], prix_min);

    printf("\n--- Alertes ---\n");
    printf("Produits en alerte (< 5 unités) : %d\n", rupture);

    if(rupture > 0) {
        printf("Liste des produits à réapprovisionner :\n");
        for(i = 0; i < n; i++)
            if(quantites[i] < 5)
                printf(" - Code %d (%d unités)\n", codes[i], quantites[i]);
    }

    printf("\n--- Remise fournisseur ---\n");

    printf("(Cette remise est une réduction accordée\n");
    printf(" par le fournisseur si la valeur du stock acheté\n");
    printf(" dépasse 10 000 DH\n");
    

    if(valeur_totale > 10000) {
        float remise = valeur_totale * 0.10;
        printf("FELICITATIONS! Votre stock depasse 10000 DH!\n");
        printf("Une remise de 10%% est appliquee.\n\n");
        printf("Valeur initiale du stock : %.2f DH\n", valeur_totale);
        printf("Remise fournisseur : 10%% (%.2f DH)\n", remise);
        printf("Valeur après remise : %.2f DH\n", valeur_totale - remise);
    } else {
        printf("Pas de remise. Il manque %.2f DH pour atteindre le seuil.\n",
               10000 - valeur_totale);
    }

    printf("\n--- Évaluation du stock ---\n");

    float taux = (rupture * 100.0) / n;
    printf("Taux de produits en alerte : %.1f%%\n", taux);

    if(taux == 0)          printf("État du stock : EXCELLENT\n");
    else if(taux < 20)     printf("État du stock : BON\n");
    else if(taux < 40)     printf("État du stock : MOYEN\n");
    else                   printf("État du stock : FAIBLE\n");

    printf("\n=============================================\n");
    printf("               FIN DU RAPPORT                \n");
    printf("=============================================\n");

    return 0;
}
